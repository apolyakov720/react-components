.checkbox
  @extend .switcher

  &__input
    border-radius .1em

    ~/ input:checked + &
      background $blue-violet

    &::before
      content ''
      width 50%
      height 90%
      border .15em solid #fff
      position absolute
      top 50%
      left 50%
      transform-origin right center
      transform translate(-60%, -43%) rotate(38deg)
      border-left none
      border-top none