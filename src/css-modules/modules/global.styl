:root
  font-size calc(.5em + 1vw)
  box-sizing border-box
  font-family Gotham, Tahoma, serif
  color $default

  //Разобраться с lh
  //line-height 1.2

  //Временно
  padding 10px

*
*::after
*::before
  box-sizing inherit

*
  padding 0
  margin 0

img
  max-width 100%
  height auto

ul
ol
  list-style-type none