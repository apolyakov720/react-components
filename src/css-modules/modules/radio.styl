.radio
  @extend .switcher

  &__input
    border-radius 50%
    align-items center
    justify-content center

    &::before
      content ''
      min-height $size-normal
      min-width @min-height
      background transparent
      border-radius inherit
      transform scale(.7)
      max-height $size-normal
      max-width @max-height

    ~/ input:checked + &::before
      background $blue-violet