.toggle
  setRootFontSize()
  display inline-flex
  align-items center
  cursor pointer

  &__input
    font-size 1em
    display inline-block
    height $sizeable.detail
    width $w = @height * 3
    background $recBodyText
    border-radius .6em / .55em
    box-shadow inset 0 -1px 5px lightness($recHeader, 40%)
    position relative
    flex-shrink 0
    transition background .25s

    &::before
      content ''
      position absolute
      top 0
      left 0
      height $sizeable.detail
      width @height
      background $recLightBackground
      border-radius 50%
      transform scale(.8)
      box-shadow 0 2px 5px $recHeader
      transition left .25s

    ~/ input:checked + &
      background $recSecondaryDark

      &:hover
        background $recSuccess

      &::before
        left $w - $sizeable.detail

    &:hover
      background $recHeader

  &__caption
    margin-left .5em